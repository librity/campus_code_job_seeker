<%= form_with model: @application, url: yield(:resource_path), local: true,
              html: { method: yield(:method) } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class='form-group'>
    <%= f.label :cover_letter %>
    <%= f.text_area :cover_letter, required: true, min: 50, class: 'form-control' %>
  </div>

  <%= f.submit t('views.actions.send'), class: 'btn btn-primary' %>
<% end %>
