<%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :patch } do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, t('views.devise.passwords.new_password') %><br />
    <% if @minimum_password_length %>
      <em>(<%= t('views.devise.registrations.min_password_length', length: @minimum_password_length) %>)</em>
    <% end %><br />
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, t('views.devise.passwords.confirm_new_password') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <%= f.submit t('views.actions.update'), class: 'btn btn-primary' %>
<% end %>