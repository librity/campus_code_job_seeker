<%= form_with url: hunter_application_standout_path(application),
              html: { method: :patch }, local: true, class: 'standout_form' do |f| %>
  <%= f.label :standout, t('activerecord.attributes.job/application.standout'), class: 'sr-only' %>

  <% if small %>
    <button type="submit" syle="width: 20px;">
      <i class="fas fa-thumbtack <%= application.standout? ? 'small_active_standout' : 'small_inactive_standout' %>"></i>
    </button>
  <% else %>
    <button type="submit">
      <i class="fas fa-thumbtack <%= application.standout? ? 'active_standout' : 'inactive_standout' %>"></i>
    </button>
  <% end %>
<% end %>
