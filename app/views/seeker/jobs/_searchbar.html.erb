<%= form_with url: seeker_jobs_path, local: true, method: :get, 
              class: 'jobs_searchbar' do |f| %>
  <div class="form-row align-items-center my-1">
    <div class="col-auto">
      <%= f.label :search, t('views.jobs.search'), class: 'sr-only' %>
      <%= f.search_field :search, placeholder: t('views.placeholders.search_jobs'), 
                          class: 'form-control mb-2' %>
    </div>

    <div class="col-auto">
      <%= f.submit t('views.actions.search'), class: 'btn btn-outline-info mb-2' %>
    </div>
  </div>
<% end %>
