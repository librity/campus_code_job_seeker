<% flash.each do |message_type, message| %>
  <% message_type = message_type == 'notice' ? 'info' : message_type %>
  <% message_type = message_type == 'alert' ? 'danger' : message_type %>
  <% message_type ||= 'info'  %>
  <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
<% end %>
