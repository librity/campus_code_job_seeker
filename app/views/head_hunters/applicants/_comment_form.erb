<%= form_with model: @comment, url: head_hunters_job_applicant_comment_path(@job, @applicant),
              local: true, class: 'contents row' do |f| %>

  <div class="input-group input-group-lg">
    <div class="input-group-prepend">
      <%= f.label :content, t('views.job_seekers/profiles.comment'), class: 'input-group-text' %>
    </div>

    <%= f.text_area :content, placeholder: t('views.placeholders.comment'),
                    required: true, min: 50, class: 'form-control' %>

    <div class="input-group-append">
    </div>
  </div>
      <%= f.submit t('views.actions.comment'), class: 'btn btn-outline-primary btn-lg btn-block mt-3' %>
<% end %>
